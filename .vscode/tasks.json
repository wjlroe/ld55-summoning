{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "build",
			"windows": {
				"command": ".\\build.bat"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": {
                "owner": "odin",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*)\\((\\d+):(\\d+)\\) (.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            }
		}
	]
}
